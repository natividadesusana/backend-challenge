{
  "name": "backend-challenge",
  "version": "1.0.0",
  "description": "",
  "main": "dist/src/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/src/server.js",
    "dev": "NODE_ENV=development nodemon --watch 'src/' --exec 'ts-node -r tsconfig-paths/register ./src/server.ts' -e ts",
    "migration:run": "prisma migrate deploy",
    "migration:generate": "npm run dev:load-envs prisma migrate dev",
    "test": "NODE_ENV=test jest --passWithNoTests --runInBand",
    "testWindows:": "cross-env NODE_ENV=test jest --passWithNoTests --runInBand",
    "test:coverage": "npm run test:load-envs -- jest -- --passWithNoTests --runInBand --coverage --collectCoverageFrom='./src/**'",
    "testWindows:covarage": "cross-env NODE_ENV=test jest --passWithNoTests --runInBand --forceExit --coverage --collectCoverageFrom='./src/**'",
    "test:migration:run": "npm run test:load-envs prisma migrate deploy",
    "test:migration:generate": "npm run test:load-envs prisma migrate dev",
    "test:watch": "jest --watch --passWithNoTests --runInBand",
    "test:load-envs": "dotenv -e .env.test",
    "test:seed": "npm run test:load-envs prisma db seed",
    "dev:load-envs": "dotenv -e .env.development",
    "dev:migration:run": "npm run dev:load-envs prisma migrate deploy",
    "dev:migration:generate": "npm run dev:load-envs prisma migrate dev",
    "dev:seed": "npm run dev:load-envs prisma db seed",
    "test:dev:run": "NODE_ENV=test nodemon --watch 'src/' --exec 'ts-node -r tsconfig-paths/register ./src/server.ts' -e ts"
  },
  "keywords": [
    "graphql",
    "apollo",
    "node",
    "postgresql",
    "pg",
    "docker"
  ],
  "author": "Susana Natividade",
  "license": "MIT License",
  "prisma": {
    "seed": "npm run dev:load-envs -- ts-node prisma/seed.ts"
  },
  "dependencies": {
    "@apollo/server": "^4.9.4",
    "@prisma/client": "^5.4.1",
    "apollo-server": "^3.12.1",
    "apollo-server-core": "^3.12.1",
    "apollo-server-express": "^3.12.1",
    "axios": "^1.5.1",
    "dayjs": "^1.11.10",
    "dotenv": "^16.3.1",
    "dotenv-expand": "^10.0.0",
    "express": "^4.18.2",
    "graphql": "^16.8.1",
    "http-status": "^1.7.0",
    "joi": "^17.11.0",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@types/node": "^20.8.2",
    "@types/pg": "^8.10.3",
    "nodemon": "^3.0.1",
    "prisma": "^5.4.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  }
}
